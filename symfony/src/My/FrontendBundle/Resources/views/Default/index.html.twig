{% extends "::layout.html.twig" %}
{% block title %}
    Najdłuższe rzeki świata
{% endblock %}
{% block content %}
    <h1>Najdłuższe rzeki świata</h1>
    <table>
        <thead>
        <tr>
            <th>lp.</th>
            <th>Nazwa</th>
            <th>Długość</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
