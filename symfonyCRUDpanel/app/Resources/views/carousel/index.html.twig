{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista zdjęć karuzeli</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa zdjęcia</th>
                <th>Typ zdjecia</th>
                <th>Obrazek</th>
                <th>Opcje</th>
            </tr>
        </thead>
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td><a href="{{ path('carousel_show', { 'id': carousel.id }) }}">{{ carousel.id }}</a></td>
                <td>{{ carousel.cfilename }}</td>
                {#<td>{{ carousel.cmime }}</td>#}
                {#<td>{{ carousel.ccontents }}</td>#}
                <td><a href="{{ path('cfile_show', { 'filename': carousel.cfilename }) }}"><img
                                src="{{ path('cfile_show', { 'filename': carousel.cfilename }) }}  " style="height: 250px"></a>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('carousel_show', { 'id': carousel.id }) }}">Pokaż</a>
                        </li>
                        <li>
                            <a href="{{ path('carousel_edit', { 'id': carousel.id }) }}">Edycja</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('carousel_new') }}">Dodaj zdjęcie</a>
        </li>
    </ul>
{% endblock %}
