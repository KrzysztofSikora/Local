{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista wszystkich kontaktów</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Imie</th>
                <th>Nazwisko</th>

            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}



            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.lastname }}</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contacts_new') }}">Dodaj nową osobę</a>
        </li>
    </ul>
{% endblock %}
