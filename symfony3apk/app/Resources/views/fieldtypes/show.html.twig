{% extends 'base.html.twig' %}

{% block body %}
    <h1>FieldTypes</h1>

    <table>
        <tbody>
            <tr>
                <th>Isactive</th>
                <td>{% if fieldType.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fieldtype</th>
                <td>{{ fieldType.fieldType }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ fieldType.name }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ fieldType.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fieldtypes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('fieldtypes_edit', { 'id': fieldType.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
