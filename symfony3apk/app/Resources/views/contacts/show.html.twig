{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contacts</h1>

    <table>
        <tbody>
            <tr>
                <th>Isdeleted</th>
                <td>{% if contact.isDeleted %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contacts_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contacts_edit', { 'id': contact.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
