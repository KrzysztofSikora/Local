{% extends 'base.html.twig' %}

{% block body %}
    <h1>Image list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Filename</th>
                <th>Mime</th>
                <th>Contents</th>
                <th>Category</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td><a href="{{ path('image_show', { 'id': image.id }) }}">{{ image.id }}</a></td>
                <td>{{ image.filename }}</td>
                <td>{{ image.mime }}</td>
                {#<td>{{ image.contents }}</td>#}
                <td><a href="{{ path('file_show', { 'filename': image.filename }) }}"><img
                            src="{{ path('file_show', { 'filename': image.filename }) }}  " style="height: 250px"></a>
                </td>
                <td>{{ image.category }}</td>
                <td>{{ image.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('image_show', { 'id': image.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('image_edit', { 'id': image.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('image_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
